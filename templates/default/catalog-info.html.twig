{% extends 'base.html.twig' %}

{% block title %}Catalog info{% endblock %}

{% block body %}
    <div class="container marketing">
        <div class="row">
            <div class="col-lg-12">
                <h1>{{ catalog.name }}</h1>
                {% for product in catalog.products %}
                    <div class="card" style="width: 18rem;">
                        <div class="card-body">
                            <h5 class="card-title">{{ product.name }}</h5>
                            <a href="{{ path('product_info', {catalog: catalog.id, product: product.id}) }}"
                            class="btn btn-primary stretched-link">Go somewhere</a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
