{% extends 'base.html.twig' %}

{% block title %}Product info - {{ product.name }}{% endblock %}

{% block body %}
<div class="container marketing">
    <div class="row">
        <div class="col-lg-12">
            <h1>{{ product.name }}</h1>
            <samp>Catalog name - {{ product.name }}</samp>
            {% for comment in product.comments %}
                <p>
                    {{ comment.text }}
                </p>
                <hr class="my-4">
            {% endfor %}
            {{ form(form) }}
        </div>
    </div>
</div>
{% endblock %}
